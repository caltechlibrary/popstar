{
  "blank_lines": {
    "maximum": 2
  },
  "html": {
    "allowed_elements": [
      "a",
      "b",
      "br",
      "code",
      "details",
      "div",
      "em",
      "figure",
      "figcaption",
      "i",
      "img",
      "ins",
      "kbd",
      "p",
      "picture",
      "source",
      "span",
      "summary",
      "sup",
      "u",
    ]
  },
  "line-length": {
    "line_length": 10000
  },
  "no-alt-text": true,
  "no-duplicate-heading": {
    "allow_different_nesting": true
  }
}
